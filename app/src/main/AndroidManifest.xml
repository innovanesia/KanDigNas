<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/new_kandignas_logo_circle"
        android:label="@string/app_name"
        android:roundIcon="@drawable/new_kandignas_logo_circle"
        android:supportsRtl="true"
        android:theme="@style/Theme.KanDigNas"
        tools:targetApi="31">
        <activity
            android:name=".frontend.activity.features.TransactionHistoryActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".frontend.activity.features.TransactionSuccessActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".frontend.activity.features.CalculatorActivity"
            android:exported="false"
            android:parentActivityName=".frontend.activity.kantin.KantinMenuActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".frontend.activity.RegisterActivity"
            android:exported="false"
            android:parentActivityName=".frontend.activity.AuthActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".frontend.activity.features.SelectNominalActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".frontend.activity.features.ShowQRActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".frontend.activity.features.ScanQRActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".frontend.activity.siswa.SiswaMenuActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".frontend.activity.AuthActivity"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".frontend.activity.koperasi.KoperasiMenuActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName=".frontend.activity.AuthActivity"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".frontend.activity.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName=".frontend.activity.AuthActivity"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".frontend.activity.kantin.KantinMenuActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".frontend.activity.AuthActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
    </application>

</manifest>